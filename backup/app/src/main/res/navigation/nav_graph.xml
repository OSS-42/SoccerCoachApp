<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.soccercoach.tracker.ui.main.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_teamSetupFragment"
            app:destination="@id/teamSetupFragment" />
        <action
            android:id="@+id/action_mainFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_mainFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/teamSetupFragment"
        android:name="com.soccercoach.tracker.ui.teamsetup.TeamSetupFragment"
        android:label="@string/team_setup"
        tools:layout="@layout/fragment_team_setup" />

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.soccercoach.tracker.ui.game.GameFragment"
        android:label="@string/new_game"
        tools:layout="@layout/fragment_game" />

    <fragment
        android:id="@+id/reportFragment"
        android:name="com.soccercoach.tracker.ui.report.ReportFragment"
        android:label="@string/reports"
        tools:layout="@layout/fragment_report" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.soccercoach.tracker.ui.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
