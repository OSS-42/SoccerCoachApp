modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["jdk11", "gradle", "wget"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Android App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "android_app"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Prototype Server"

[[workflows.workflow]]
name = "Android App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew assembleDebug && cd app/build/outputs/apk/debug && python -m http.server 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "android_app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew :app:installDebug && adb shell am start -n com.soccercoach.tracker/.MainActivity"

[[workflows.workflow]]
name = "Prototype Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd soccer-coach-prototype && python -m http.server 5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "./gradlew assembleDebug && cd app/build/outputs/apk/debug && python -m http.server 5000"]

[[ports]]
localPort = 5000
externalPort = 80
