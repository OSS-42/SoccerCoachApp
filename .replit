modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["jdk11", "gradle", "wget"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Soccer Coach Web App"

[[workflows.workflow]]
name = "Soccer Coach Web App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd soccer-coach-app && python -m http.server 5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "./gradlew assembleDebug && cd app/build/outputs/apk/debug && python -m http.server 5000"]

[[ports]]
localPort = 5000
externalPort = 80
